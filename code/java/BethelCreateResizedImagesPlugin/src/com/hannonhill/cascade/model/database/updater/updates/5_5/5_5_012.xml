<?xml version="1.0" encoding="UTF-8"?>
 
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
         
        <changeSet author="aubrey.rhodes" id="5_5_012">
            <preConditions onFail="MARK_RAN">
                <customPrecondition className="com.hannonhill.cascade.model.database.updater.DatabaseVersionPrecondition">
                    <param name="changeVersion" value="5_5_012"/>
                    <param name="compareMethod" value="GREATER_THAN"/>
                </customPrecondition>
            </preConditions>
           
           <sql>
            insert into cxml_role_group_link (groupName, roleId) select groupName, 4 from cxml_role_group_link where roleId = 5 and groupName not in (select groupName from cxml_role_group_link where roleId=4)
           </sql>
           
           <sql>
            insert into cxml_role_group_link (groupName, roleId) select groupName, 3 from cxml_role_group_link where roleId = 4 and groupName not in (select groupName from cxml_role_group_link where roleId=3)
           </sql>
           
           <sql>
            insert into cxml_role_group_link (groupName, roleId) select groupName, 2 from cxml_role_group_link where roleId = 3 and groupName not in (select groupName from cxml_role_group_link where roleId=2)
           </sql>
           
           <sql>
            insert into cxml_role_group_link (groupName, roleId) select groupName, 1 from cxml_role_group_link where roleId = 2 and groupName not in (select groupName from cxml_role_group_link where roleId=1)
           </sql>
           
            <!-- The following statements handle the column type mappings for id and boolean fields -->
            <modifySql dbms="mssql">
                <replace replace="TINYINT(4)" with="TINYINT"/>
                <replace replace="VARCHAR(32)" with="NVARCHAR(32)"/>
                <replace replace="VARCHAR(250)" with="NVARCHAR(250)"/>
                <replace replace="BIGINT(20)" with="BIGINT"/>
                <regExpReplace replace=" INT\([0-9]*\)" with=" INT"/>
            </modifySql>
            <modifySql dbms="mysql">
                <!--  only use if creating a table 
                <append value="engine=innodb"/>
                -->                
            </modifySql>
            <modifySql dbms="oracle">
                <replace replace="TINYINT(4)" with="NUMBER(4)"/>
                <regExpReplace replace="NUMBER\(19,0\)\([0-9]*\)" with="NUMBER(19,0)"/>
                <regExpReplace replace=" INT\(" with=" NUMBER("/>
            </modifySql>
            
        </changeSet>
 
</databaseChangeLog>