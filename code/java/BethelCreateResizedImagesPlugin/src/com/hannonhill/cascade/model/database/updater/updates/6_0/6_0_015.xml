<?xml version="1.0" encoding="UTF-8"?>
 
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
         
        <changeSet author="aubrey.rhodes" id="6_0_015">
            <preConditions onFail="MARK_RAN">
                <customPrecondition className="com.hannonhill.cascade.model.database.updater.DatabaseVersionPrecondition">
                    <param name="changeVersion" value="6_0_015"/>
                    <param name="compareMethod" value="GREATER_THAN"/>
                </customPrecondition>
            </preConditions>
            
            <addColumn tableName="cxml_site">
                <column name="defaultMetadataSetId" type="VARCHAR(32)" defaultValue="null"></column>
            </addColumn>
            
            <addForeignKeyConstraint referencedTableName="cxml_metadataset" baseColumnNames="defaultMetaDataSetId" baseTableName="cxml_site" referencedColumnNames="id" constraintName="FK_SITE_DEFAULTMETADATASET"/>
            
            <createIndex tableName="cxml_site" indexName="IDX_SITE_DEF_METASET">
                <column name="defaultMetadataSetId"></column>
            </createIndex>
            
            <!-- The following statements handle the column type mappings for id and boolean fields -->
            <modifySql dbms="mssql">
                <replace replace="TINYINT(4)" with="TINYINT"/>
                <replace replace="VARCHAR(32)" with="NVARCHAR(32)"/>
                <replace replace="BIGINT(20)" with="BIGINT"/>
                <regExpReplace replace=" INT\([0-9]*\)" with=" INT"/>
            </modifySql>
            <modifySql dbms="mysql">
                <!--  only use if creating a table 
                <append value="engine=innodb"/>
                -->                
            </modifySql>
            <modifySql dbms="oracle">
                <replace replace="TINYINT(4)" with="NUMBER(4)"/>
            </modifySql>
            
        </changeSet>
 
</databaseChangeLog>