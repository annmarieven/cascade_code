<attribute-rewriter-rules>
	
	<rule>
		<element>a</element>
		<attribute>href</attribute>
	</rule>
	<rule>
		<element>td</element>
		<attribute>background</attribute>
	</rule>
	<rule>
		<element>link</element>
		<attribute>href</attribute>
		<render>true</render>
	</rule>
	<rule>
		<element>link</element>
		<attribute>src</attribute>
	</rule>
	<rule>
		<element>script</element>
		<attribute>src</attribute>
		<render>true</render>
	</rule>
	<rule>
		<element>img</element>
		<attribute>src</attribute>
		<render>true</render>
	</rule>
	<rule>
		<element>iframe</element>
		<attribute>src</attribute>
	</rule>
	<rule>
		<element>area</element>
		<attribute>src</attribute>
	</rule>
	<rule>
		<element>area</element>
		<attribute>href</attribute>
	</rule>
	<rule>
		<element>area</element>
		<attribute>background</attribute>
	</rule>
	<rule>
		<element>frame</element>
		<attribute>src</attribute>
	</rule>
	<rule>
		<element>param</element>
		<attribute>href</attribute>
	</rule>
	<rule>
		<element>param</element>
		<attribute>src</attribute>
	</rule>
	<rule>
		<element>param</element>
		<attribute>background</attribute>
	</rule>
	<rule>
		<element>embed</element>
		<attribute>src</attribute>
	</rule>
	<rule>
		<element>embed</element>
		<attribute>href</attribute>
	</rule>
	<rule>
		<element>table</element>
		<attribute>background</attribute>
	</rule>
	<rule>
		<element>input</element>
		<attribute>src</attribute>
	</rule>
	<rule>
		<element>input</element>
		<attribute>href</attribute>
	</rule>
	<rule>
		<element>input</element>
		<attribute>background</attribute>
	</rule>
	<rule>
		<element>body</element>
		<attribute>src</attribute>
	</rule>
	<rule>
		<element>body</element>
		<attribute>background</attribute>
	</rule>
	<rule>
		<element>video</element>
		<attribute>src</attribute>
	</rule>
	<rule>
		<element>video</element>
		<attribute>poster</attribute>
	</rule>
	<rule>
		<element>source</element>
		<attribute>src</attribute>
	</rule>
	<rule>
		<element>audio</element>
		<attribute>src</attribute>
	</rule>
</attribute-rewriter-rules>